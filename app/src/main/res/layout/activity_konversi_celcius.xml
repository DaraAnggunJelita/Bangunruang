<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonversiCelcius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtkonversi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="15sp"
            android:text="Konversi Celcius"
            android:textAlignment="center"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/txtAngka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Masukan Angka"
            android:layout_marginTop="40dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/txthasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:text="Hasil ="
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnkelvin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220sp"
            android:layout_weight="1"
            android:text="Kelvin" />

        <Button
            android:id="@+id/btnFarenheid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220sp"
            android:layout_weight="1"
            android:text="Farenheid" />

        <Button
            android:id="@+id/btnReamor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220sp"
            android:layout_weight="1"
            android:text="Reamor" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>